<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1.0-0" author="admin">

        <!-- Create songs table -->
        <createTable tableName="songs">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="artist" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="genre" type="VARCHAR(255)"/>

            <column name="file_path" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Create playlists table -->
        <createTable tableName="playlists">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" />
            </column>
        </createTable>
    </changeSet>

    <!-- Create intermediate table playlist_song -->
    <changeSet id="1.0-1" author="admin">
        <createTable tableName="playlist_song">
            <column name="playlist_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="song_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Composite primary key -->
        <addPrimaryKey tableName="playlist_song"
                       columnNames="playlist_id, song_id"
                       constraintName="pk_playlist_song"/>

        <!-- Foreign key to playlist -->
        <addForeignKeyConstraint baseTableName="playlist_song"
                                 baseColumnNames="playlist_id"
                                 referencedTableName="playlists"
                                 referencedColumnNames="id"
                                 constraintName="fk_playlist_song_playlist"/>

        <!-- Foreign key to song -->
        <addForeignKeyConstraint baseTableName="playlist_song"
                                 baseColumnNames="song_id"
                                 referencedTableName="songs"
                                 referencedColumnNames="id"
                                 constraintName="fk_playlist_song_song"/>
    </changeSet>

</databaseChangeLog>
